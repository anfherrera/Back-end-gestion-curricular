# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura tus valores reales

# Perfil activo (prod para despliegue en la nube)
SPRING_PROFILES_ACTIVE=prod

# Base de datos
DB_URL=jdbc:mysql://localhost:3306/bdcurricular?useSSL=false&serverTimezone=GMT&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=tu_contraseña_aqui

# JWT
JWT_SECRET=tu_clave_secreta_super_segura_de_al_menos_256_bits_para_produccion
JWT_EXPIRATION=3600000

# Configuración de base de datos
DDL_AUTO=validate
SHOW_SQL=false
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# Logging
SQL_LOG_LEVEL=WARN

# Puerto (plataformas como Railway lo inyectan automáticamente)
PORT=8080
